<Page x:Class="Library.Pages.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="BookPage">

    <Grid>
        <StackPanel Width="560" VerticalAlignment="Center">
            <Label Content="Название книги"></Label>
            <TextBox Name="BookName"></TextBox>
            <Label Content="Автор"></Label>
            <TextBox Name="Author"></TextBox>
            <Label Content="Краткое описание"></Label>
            <TextBox Name="Description"></TextBox>
            <Label Content="Год выпуска"></Label>
            <TextBox Name="Year"></TextBox>
            <Label Content="Жанр"></Label>
            <TextBox Name="Genre"></TextBox>
            <Label Content="Количество страниц"></Label>
            <TextBox Name="PagesCount"></TextBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Click="Save"/>
                <Button Content="Cancel" Click="Cancel"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
